<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/darko">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_weight="0.1"
            android:background="@drawable/mainlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45sp"
            android:padding="5sp"
            android:text="NPSC '18"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:fontFamily="@font/michroma"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id"
                android:id="@+id/Email"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_light"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/Password"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_light"
                android:textStyle="bold"
                android:inputType="textPassword"/>
            <Button
                android:layout_width="100sp"
                android:layout_height="60sp"
                android:text="sign in"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_mono_medium"
                android:id="@+id/signIn"
                android:textColor="@color/darko"
                android:background="@color/golden"/>

            <TextView
                android:id="@+id/SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="casual"
                android:text="New here? Sign up now!"
                android:textSize="18sp"
                app:fontFamily="@font/numans" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>





