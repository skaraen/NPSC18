<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    android:background="@color/darko">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Sign Up !"
        android:textSize="50sp"
        app:fontFamily="@font/bungee_inline"
        android:padding="10sp"
        android:textColor="@color/turquoise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:padding="10sp"
            android:text="Name"
            android:textColor="@color/golden"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/comfortaa_light" />

    <EditText
        android:id="@+id/sName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Example"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10sp"
        android:textColor="@color/egg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Email"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/comfortaa_light"
        android:padding="10sp"
        android:textColor="@color/golden"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_light"
        android:hint="example@domain.com"
        android:textSize="25sp"
        android:id="@+id/sEmail"
        android:textStyle="bold"
        android:padding="10sp"
        android:textColor="@color/egg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Password"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/comfortaa_light"
        android:padding="10sp"
        android:textColor="@color/golden"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="min 6 characters"
        android:textSize="25sp"
        android:id="@+id/sPassword"
        android:fontFamily="@font/comfortaa_light"
        android:textStyle="bold"
        android:padding="10sp"
        android:textColor="@color/egg" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="130dp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:fontFamily="@font/bungee_inline"
        android:text="Proceed"
        android:textSize="20sp"
        android:layout_margin="30sp"
        android:background="#000000"
        android:textColor="@color/golden"/>

    </LinearLayout>

</ScrollView>