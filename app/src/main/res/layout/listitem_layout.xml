<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:background="@color/darko">

    <TextView
        android:layout_width="10sp"
        android:layout_height="90sp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="11:15 AM"
        android:textSize="26sp"
        app:fontFamily="@font/orbitron"
        android:id="@+id/startTime"
        android:padding="3sp"
        android:textColor="@color/turquoise"/>
    <LinearLayout
        android:layout_width="10sp"
        android:layout_height="90sp"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:text="TUTORIAL 2: Synchro-phasor Technology in Power Systems"
            android:textSize="16sp"
            app:fontFamily="@font/comfortaa_light"
            android:textStyle="bold"
            android:id="@+id/heading"
            android:textColor="@color/golden"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:text="EEE Auditorium"
            android:textSize="16sp"
            app:fontFamily="@font/comfortaa_light"
            android:id="@+id/venue"
            android:textStyle="bold"
            android:textColor="@color/egg"/>




    </LinearLayout>

</LinearLayout>